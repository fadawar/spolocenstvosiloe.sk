{% extends "base.html" %}

{% block content %}
  {% for article in articles %}
    <a href="articles/{{ article.id }}">
      <h1>{{ article.title }}</h1>
    </a>
    <p>{{ article.content }}</p>
    {% if article.videoarticle %}
      <video src="{{ article.videoarticle.video_url }}">
        <track src="{{ MEDIA_URL }}{{ article.videoarticle.subtitles.name }}">
      </video>
    {% endif %}
  {% endfor %}
{% endblock %}